      "@spartan-ng/ui-dialog-helm": [
        "src/components/ui/ui-dialog-helm/src/index.ts"
      ],
      "@spartan-ng/ui-icon-helm": [
        "src/components/ui/ui-icon-helm/src/index.ts"
      ],
      "@spartan-ng/ui-input-helm": [
        "src/components/ui/ui-input-helm/src/index.ts"
